{
  "name": "gooditworks_base_api",
  "version": "0.1.0",
  "description": "Gooditworks base project for GraphQL API",
  "repository": "https://github.com/gooditworks/base-api",
  "author": "Max Eliseev <mxseev@gmail.com>",
  "license": "MIT",
  "engines": {
    "node": ">=14.0.0"
  },
  "scripts": {
    "postinstall": "sh ./scripts/add_base_remote.sh",
    "codegen": "graphql-codegen --config codegen.yml",
    "dev:local": "nodemon",
    "dev:vercel": "vercel dev",
    "build": "concurrently -c green \"npm:build:*\"",
    "build:typescript": "npm run prisma:generate && tsc",
    "build:docs": "spectaql spectaql.yaml -t public/docs",
    "lint": "concurrently -c green \"npm:lint:*\"",
    "lint:base": "sh ./scripts/check_base_update.sh",
    "lint:typecheck": "tsc --noEmit --project tsconfig.json",
    "lint:ts": "eslint --ext .ts,.tsx .",
    "test": "concurrently -c green \"npm:test:*\"",
    "test:unit": "jest --silent",
    "prisma:generate": "prisma generate",
    "prisma:migrate": "prisma migrate dev",
    "prisma:studio": "prisma studio",
    "migrate": "sh ./scripts/migrate.sh",
    "release": "standard-version",
    "commit": "git add . && cz",
    "k6": "k6 run k6/tests/stability.js",
    "k6:stress:empty": "k6 run -q k6/tests/empty.js",
    "k6:stress:realistic": "k6 run -q k6/tests/realistic.js",
    "k6:stress:slow": "k6 run -q --log-output=none k6/tests/slow.js"
  },
  "devDependencies": {
    "@arkweid/lefthook": "^0.7.7",
    "@commitlint/cli": "^13.2.1",
    "@commitlint/config-conventional": "^14.1.0",
    "@graphql-codegen/add": "^3.1.0",
    "@graphql-codegen/cli": "^2.2.1",
    "@graphql-codegen/typescript": "^2.2.4",
    "@graphql-codegen/typescript-resolvers": "^2.3.2",
    "@types/jest": "^27.0.2",
    "@types/lodash": "^4.14.176",
    "@types/micro": "^7.3.6",
    "@typescript-eslint/eslint-plugin": "^4.33.0",
    "@typescript-eslint/parser": "^4.33.0",
    "commitizen": "^4.2.4",
    "commitlint-plugin-function-rules": "^1.4.0",
    "concurrently": "^6.3.0",
    "cz-conventional-changelog": "^3.3.0",
    "enhanced-resolve": "^5.8.3",
    "eslint": "^7.32.0",
    "eslint-config-airbnb-base-ts": "^14.1.2",
    "eslint-plugin-jest": "^24.5.2",
    "jest": "^27.3.1",
    "jest-junit": "^13.0.0",
    "micro": "^9.3.4",
    "nodemon": "^2.0.14",
    "prettier": "^2.4.1",
    "spectaql": "^0.9.2",
    "standard-version": "^9.3.2",
    "ts-jest": "^27.0.7",
    "ts-node": "^10.4.0",
    "typescript": "^4.4.4"
  },
  "dependencies": {
    "@gooditworks/monitoring": "^1.2.0",
    "@graphql-tools/graphql-file-loader": "^7.3.1",
    "@graphql-tools/load": "^7.4.0",
    "@graphql-tools/schema": "^8.3.0",
    "@graphql-tools/utils": "^8.5.0",
    "@prisma/client": "^3.3.0",
    "@vercel/node": "^1.12.1",
    "apollo-server-core": "^3.4.0",
    "apollo-server-errors": "^3.2.0",
    "apollo-server-micro": "^3.4.0",
    "apollo-server-plugin-base": "^3.3.0",
    "dotenv": "^10.0.0",
    "graphql": "^15.6.1",
    "lodash": "^4.17.21",
    "prisma": "^3.3.0",
    "ts-node": "^10.4.0",
    "typescript": "^4.4.4"
  }
}
