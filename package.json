{
  "name": "gooditworks_base_api",
  "version": "0.1.1",
  "description": "Gooditworks base project for GraphQL API",
  "repository": "https://github.com/gooditworks/base-api",
  "author": "Max Eliseev <mxseev@gmail.com>",
  "license": "MIT",
  "engines": {
    "node": ">=14.0.0"
  },
  "scripts": {
    "postinstall": "npm run prisma:generate && sh ./scripts/add_base_remote.sh",
    "codegen": "graphql-codegen --config codegen.yml",
    "dev:local": "nodemon",
    "dev:vercel": "vercel dev",
    "build": "concurrently -c green \"npm:build:*\"",
    "build:typescript": "tsc",
    "build:docs": "spectaql spectaql.yaml -t public/docs",
    "lint": "concurrently -c green \"npm:lint:*\"",
    "lint:base": "sh ./scripts/check_base_update.sh",
    "lint:typecheck": "tsc --noEmit --project tsconfig.json",
    "lint:ts": "eslint --ext .ts,.tsx .",
    "test": "concurrently -c green \"npm:test:*\"",
    "test:unit": "jest --silent",
    "prisma:generate": "prisma generate",
    "prisma:migrate": "prisma migrate dev",
    "prisma:studio": "prisma studio",
    "migrate": "sh ./scripts/migrate.sh",
    "release": "standard-version",
    "commit": "git add . && cz",
    "k6": "k6 run k6/tests/stability.js",
    "k6:stress:empty": "k6 run -q k6/tests/empty.js",
    "k6:stress:realistic": "k6 run -q k6/tests/realistic.js",
    "k6:stress:slow": "k6 run -q --log-output=none k6/tests/slow.js"
  },
  "devDependencies": {
    "@arkweid/lefthook": "0.7.7",
    "@graphql-codegen/add": "3.1.1",
    "@graphql-codegen/cli": "2.6.2",
    "@graphql-codegen/typescript": "2.4.8",
    "@graphql-codegen/typescript-resolvers": "2.6.1",
    "@types/lodash": "4.14.181",
    "@types/micro": "7.3.7",
    "@commitlint/cli": "16.2.3",
    "@commitlint/config-conventional": "16.2.1",
    "@types/jest": "27.4.1",
    "@typescript-eslint/eslint-plugin": "5.19.0",
    "@typescript-eslint/parser": "5.19.0",
    "commitizen": "4.2.4",
    "commitlint-plugin-function-rules": "1.6.2",
    "concurrently": "7.1.0",
    "cz-conventional-changelog": "3.3.0",
    "enhanced-resolve": "5.9.3",
    "eslint": "8.13.0",
    "eslint-config-airbnb-base": "15.0.0",
    "eslint-config-airbnb-typescript": "17.0.0",
    "eslint-plugin-jest": "26.1.4",
    "jest": "27.5.1",
    "jest-junit": "13.1.0",
    "micro": "9.3.4",
    "nodemon": "2.0.15",
    "spectaql": "1.1.0",
    "prettier": "2.6.2",
    "standard-version": "9.3.2",
    "ts-jest": "27.1.4",
    "ts-node": "10.7.0",
    "typescript": "4.6.3"
  },
  "dependencies": {
    "@gooditworks/monitoring": "^1.3.0",
    "@graphql-tools/graphql-file-loader": "7.3.10",
    "@graphql-tools/load": "7.5.9",
    "@graphql-tools/schema": "8.3.9",
    "@graphql-tools/utils": "8.6.8",
    "@prisma/client": "3.12.0",
    "@vercel/node": "1.14.1",
    "apollo-server-core": "3.6.7",
    "apollo-server-errors": "3.3.1",
    "apollo-server-micro": "3.6.7",
    "apollo-server-plugin-base": "3.5.2",
    "dotenv": "16.0.0",
    "graphql": "16.3.0",
    "lodash": "4.17.21",
    "prisma": "3.12.0"
  }
}
