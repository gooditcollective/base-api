{
  "name": "gooditworks_base_api",
  "version": "0.1.0",
  "description": "Gooditworks base project for GraphQL API",
  "repository": "https://github.com/gooditworks/base-api",
  "author": "Max Eliseev <mxseev@gmail.com>",
  "license": "MIT",
  "scripts": {
    "postinstall": "sh ./scripts/add_base_remote.sh",
    "codegen": "graphql-codegen --config codegen.yml",
    "build": "tsc",
    "dev": "nodemon",
    "lint": "concurrently -c green \"npm:lint:*\"",
    "lint:base": "sh ./scripts/check_base_update.sh",
    "lint:typecheck": "tsc --noEmit --project tsconfig.json",
    "lint:ts": "eslint --ext .ts,.tsx .",
    "test": "concurrently -c green \"npm:test:*\"",
    "test:unit": "jest --silent",
    "release": "standard-version",
    "commit": "git add . && cz"
  },
  "devDependencies": {
    "@arkweid/lefthook": "^0.7.6",
    "@commitlint/cli": "^13.1.0",
    "@commitlint/config-conventional": "^13.1.0",
    "@graphql-codegen/add": "^3.1.0",
    "@graphql-codegen/cli": "^2.1.0",
    "@graphql-codegen/typescript": "^2.1.0",
    "@graphql-codegen/typescript-resolvers": "^2.1.0",
    "@types/jest": "^26.0.23",
    "@types/lodash": "^4.14.172",
    "@types/micro": "^7.3.6",
    "@typescript-eslint/eslint-plugin": "^4.26.1",
    "@typescript-eslint/parser": "^4.26.1",
    "commitizen": "^4.2.4",
    "commitlint-plugin-function-rules": "^1.3.2",
    "concurrently": "^6.2.0",
    "cz-conventional-changelog": "^3.3.0",
    "enhanced-resolve": "^5.8.2",
    "eslint": "^7.28.0",
    "eslint-config-airbnb-base-ts": "^14.1.1",
    "eslint-plugin-jest": "^24.3.6",
    "jest": "^27.0.4",
    "jest-junit": "^12.2.0",
    "micro": "^9.3.4",
    "nodemon": "^2.0.12",
    "prettier": "^2.3.1",
    "standard-version": "^9.3.1",
    "ts-jest": "^27.0.3",
    "ts-node": "^8.9.1",
    "typescript": "^4.3.2"
  },
  "dependencies": {
    "@gooditworks/monitoring": "^1.2.0",
    "@graphql-tools/graphql-file-loader": "^7.0.5",
    "@graphql-tools/load": "^7.1.8",
    "@vercel/node": "^1.12.1",
    "apollo-server-core": "^3.1.2",
    "apollo-server-micro": "^3.1.2",
    "apollo-server-plugin-base": "^3.2.0",
    "dotenv": "^10.0.0",
    "graphql": "^15.5.1",
    "lodash": "^4.17.21",
    "ts-node": "^10.2.1",
    "typescript": "^4.3.2"
  }
}
